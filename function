# ----------------+
# Shell Functions |
# ----------------+

# Create a new directory and enter it
# syntax: mkcd test_dir
function mkcd() {
	mkdir -p "$@" && cd "$@";
}

# Activate a Python version locally and create a virtual environment for said version
function pyenv-venv() {
    pyenv local "$@" && $PYENV_HOME/versions/"$@"/python.exe -m venv .venv;
}

